<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <EditText
        android:id="@+id/login_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="please enter phone number"
        android:letterSpacing="0.1"
        android:maxLength="13"
        android:paddingStart="10dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/login_next"
        app:layout_constraintLeft_toRightOf="@id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/login_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_status_selector"
        android:enabled="false"
        android:text="下一步"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_mobile" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        android:text="+1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/login_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/login_mobile" />


</androidx.constraintlayout.widget.ConstraintLayout>